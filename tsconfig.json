{
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": [
      "./types"
    ]
  }
}